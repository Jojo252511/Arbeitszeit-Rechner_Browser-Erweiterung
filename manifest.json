{
  "manifest_version": 3,
  "name": "Arbeitszeit-Rechner",
  "version": "1.1.4",
  "author": "Joern Unverzagt",
  "description": "Ein persönlicher Arbeitszeit-Rechner als Browser Side Panel.",
  "permissions": [
    "storage",
    "sidePanel",
    "notifications"
  ],
  "options_page": "options.html",
  "action": {
    "default_title": "Arbeitszeit-Rechner öffnen"
  },
  "background": {
    "service_worker": "./dist/background.js"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "countdown.html",
        "/Print/",
        "/Print/index.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
