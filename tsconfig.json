{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],

    /* Modernisierte Modul-Einstellungen, die die alten Optionen ersetzen */
    "module": "ES2022", 
    "moduleResolution": "bundler",
    "resolveJsonModule": true,

    /* Projekt-Struktur */
    "rootDir": "./scripts",
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
  },
  "include": [
    "./scripts/**/*"
  ]
}